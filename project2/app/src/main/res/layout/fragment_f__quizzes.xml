<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".F_Quizzes">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_1"
            android:layout_centerHorizontal="true"
            android:id="@+id/sp_quizzes"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_image_arrow_down_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="310dp"/>

        <FrameLayout
            android:layout_marginTop="30dp"
            android:layout_below="@+id/sp_quizzes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_frame_av_de">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/f_rv_item"/>
        </FrameLayout>


    </RelativeLayout>

</FrameLayout>