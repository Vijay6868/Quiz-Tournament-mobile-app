<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".F_QuizField">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/label_heading"
            android:text="Question: 1"
            android:id="@+id/tv_que_no"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_button_1"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"


            android:textColor="@color/white"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="260dp"
            android:textSize="18sp"
            android:id="@+id/score"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:text="Score: 10/10"
            android:background="@drawable/bt_like"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/et_background"
            android:paddingLeft="20dp"
            android:text="What is the capital of India?"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_que_no"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/lnRadio">
            <RadioGroup
                android:id="@+id/rg_multiple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                >
                <RadioButton
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi"
                    android:textSize="22sp"/>
                <RadioButton
                    android:id="@+id/option2"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai"
                    android:textSize="22sp"/>
                <RadioButton
                    android:id="@+id/option3"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcutta"
                    android:textSize="22sp"/>
                <RadioButton
                    android:id="@+id/option4"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banglore"
                    android:textSize="22sp"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/rg_true_or_false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="30dp"
                >
                <RadioButton
                    android:id="@+id/rb_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True"
                    android:textSize="22sp"/>
                <RadioButton
                    android:id="@+id/rb_false"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False"
                    android:textSize="22sp"/>
            </RadioGroup>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_incorrect"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btNext"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wrong!!"
            android:textSize="28sp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/tv_correct"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btNext"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correct!!"
            android:gravity="center"
            android:textSize="28sp"
            android:padding="10dp"
            android:textColor="@color/bt_color_3"/>
        <Button
            android:id="@+id/btNext"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="30dp"
            android:layout_below="@id/lnRadio"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_2"
            android:layout_marginLeft="230dp"
            android:drawableRight="@drawable/ic_right_arrow"/>
        <Button
            android:id="@+id/btCheck"
            android:layout_width="130dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:text="Check"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lnRadio"
            android:textSize="18sp"
            android:background="@drawable/bg_button_3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/ic_check"/>
    </RelativeLayout>

</FrameLayout>